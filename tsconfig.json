{
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "rootDir": ".",
        "inlineSources": true,
        "lib": [
            "es6",
            "dom"
        ],

        "target": "es5",
        "skipLibCheck": true
    },
    "types": [
        "node",
        "clipboard"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "demo",
        "dist",
        "**/*.ngfactory.ts"
    ]
}